<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1715706582672-1" author="jayxunbey">
        <createTable tableName="temp_send_sms_of_transfer">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_temp_send_sms_of_transfer"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="debit_card" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_card" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="expiration" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="transfer_status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="sent_code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="debit_card" baseTableName="temp_send_sms_of_transfer" constraintName="FK_TEMP_SEND_SMS_OF_TRANSFER_ON_DEBIT_CARD" referencedColumnNames="number" referencedTableName="plastic_card"/>
        <addForeignKeyConstraint baseColumnNames="transfer_status" baseTableName="temp_send_sms_of_transfer" constraintName="FK_TEMP_SEND_SMS_OF_TRANSFER_ON_TRANSFER_STATUS" referencedColumnNames="id" referencedTableName="transfer_status"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="temp_send_sms_of_transfer" constraintName="FK_TEMP_SEND_SMS_OF_TRANSFER_ON_USER" referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
</databaseChangeLog>
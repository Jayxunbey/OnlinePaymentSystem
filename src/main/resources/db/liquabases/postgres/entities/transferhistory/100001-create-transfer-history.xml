<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="1715706398575-1" author="jayxunbey">
        <createSequence incrementBy="1" sequenceName="transfer_history_id_seq" startValue="1"/>
        <createTable tableName="transfer_history">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_transfer_history"/>
            </column>
            <column name="user_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="debit_card" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_card" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="fee" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="sender_full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_full_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="debit_card" baseTableName="transfer_history" constraintName="FK_TRANSFER_HISTORY_ON_DEBIT_CARD" referencedColumnNames="number" referencedTableName="plastic_card"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="transfer_history" constraintName="FK_TRANSFER_HISTORY_ON_USER" referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
</databaseChangeLog>